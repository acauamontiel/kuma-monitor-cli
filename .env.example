# Kuma Monitor Configuration
# Copy this file to .env and modify as needed

# Endpoint configuration
KUMA_ENDPOINT=https://your-kuma-server.com/metrics
KUMA_API_KEY=your-api-key-here

# Update interval in seconds
KUMA_UPDATE_INTERVAL=30

# Display options (true/false)
KUMA_SHOW_HEADER=true
KUMA_SHOW_COUNTDOWN=true
KUMA_SHOW_HISTORY=true
KUMA_HISTORY_LENGTH=30